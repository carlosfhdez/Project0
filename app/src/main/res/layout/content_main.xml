<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@color/colorBackground"
    android:dividerPadding="20dp">

    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Awesome Apps :)"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:paddingTop="10dp" />
    <Button
        style="@style/ButtonsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        android:onClick="startSpotifyStreamer" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Scores"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        style="@style/ButtonsStyle"
        android:onClick="startFootballScores" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        style="@style/ButtonsStyle"
        android:onClick="startLibrary" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        style="@style/ButtonsStyle"
        android:onClick="startBuildItBigger" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        style="@style/ButtonsStyle"
        android:onClick="startXYZReader" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/ButtonWidth"
        android:height="@dimen/ButtonHeight"
        style="@style/ButtonsStyle.capstone"
        android:onClick="startCapstone" />

</LinearLayout>
